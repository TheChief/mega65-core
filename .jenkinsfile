pipeline {
    agent {
        docker {
            image 'megabuild'
            args '--init -v vivado_2022_2:/opt/Xilinx'
        }
    }
    stages {
        stage('Setup toolchain') {
            steps {
                sh 'release-build/prepare.sh prunepkg'
            }
        }
        stage('Cleanup') {
            steps {
                sh 'make USE_LOCAL_CC65=0 cleanall'
            }
        }
        stage('Build Freezer') {
            steps {
                sh 'make USE_LOCAL_CC65=0 freezer_files'
            }
        }
        stage('Build MEGA65R3') {
            steps {
                sh 'make VIVADO=/opt/Xilinx/vivado_wrapper.sh USE_LOCAL_CC65=0 bin/mega65r3.bit'
                sh 'release-build/build-release.sh mega65r3 JENKINSGEN'
            }
        }
        stage('Build MEGA65R2') {
            steps {
                sh 'echo "skipped"'
                // sh 'make VIVADO=/opt/Xilinx/vivado_wrapper.sh USE_LOCAL_CC65=0 bin/nexys4ddr-widget.bit'
            }
        }
        stage('Build Nexys4DDR-Widget') {
            steps {
                sh 'echo "skipped"'
                // sh 'make VIVADO=/opt/Xilinx/vivado_wrapper.sh USE_LOCAL_CC65=0 bin/nexys4ddr-widget.bit'
            }
        }
        stage('Publish') {
            steps {
                sh 'gh release list'
            }
        }
    }
    post {
        always {
            archiveArtifacts artifacts: "release-build/pkg/*.7z",
                onlyIfSuccessful: true,
                fingerprint: true
        }
    }
    environment {
        GH_TOKEN = credentials('mega65-github-api')
        BRANCH_SHORT = sh (returnStdout: true, script: 'echo $BRANCH_NAME | sed -r \'s/^(.{5}).*$/\1/\'').trim()
    }
}
